<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://serviceCompletionCertificateEdit.caption"
        focusComponent="form"
        messagesPack="com.company.train.web.screens.servicecompletioncertificate">
    <data>
        <instance id="serviceCompletionCertificateDc"
                  class="com.company.train.entity.ServiceCompletionCertificate">
            <view extends="_local">
                <property name="files" view="_minimal"/>
            </view>
            <loader/>
            <collection id="filesDc" property="files"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="serviceCompletionCertificateDc">
            <column width="350px">
                <textField id="numberField" property="number"/>
                <dateField id="dateField" property="date"/>
                <textField id="amountField" property="amount"/>
                <textField id="vatField" property="vat"/>
                <textField id="totalAmountField" property="totalAmount"/>
                <textArea id="descriptionField" property="description" rows="5"/>
            </column>
        </form>
        <groupBox id="filesBox" caption="msg://com.company.train.entity/ServiceCompletionCertificate.files">
            <table id="filesTable" dataContainer="filesDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="name"/>
                    <column id="createDate"/>
                    <column id="extension"/>
                </columns>
                <buttonsPanel>
                    <button action="filesTable.add"/>
                    <button action="filesTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
